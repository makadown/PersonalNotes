<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makadown.personalnotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
 <!-- Permissions required for GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
 <!-- Optional permission for App measurement to run. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_1"
        android:theme="@style/Theme.PersonalNotes" >
        <activity
            android:name="com.makadown.personalnotes.NotesActivity"
            android:label="@string/notes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.makadown.personalnotes.NoteDetailActivity"
            android:label="@string/title_activity_make_note" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.TrashActivity"
            android:label="@string/trash" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.ArchivesActivity"
            android:label="@string/archives" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.HelpFeedActivity"
            android:label="@string/helpandfeedback"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.GoogleDriveSelectionActivity"
            android:label="@string/title_activity_list_files" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.AppAuthenticationActivity"
            android:label="@string/title_activity_online_photo_selection"
            android:noHistory="true"
            android:parentActivityName="com.makadown.personalnotes.NotesActivity" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.GoogleDriveDirectoryNameGetterActivity"
            android:label="@string/title_activity_online_photo_selection"
            android:noHistory="true"
            android:parentActivityName="com.makadown.personalnotes.NotesActivity" >
        </activity>
        <activity
            android:name="com.makadown.personalnotes.DropBoxPickerActivity"
            android:label="@string/title_activity_selection_drop_box" >
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>
                <data android:scheme="db-xy0d49wvq6hekwc" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.makadown.personalnotes.AlarmReceiver"
            android:process=":remote" />

        <provider
            android:name="com.makadown.personalnotes.AppProvider"
            android:authorities="com.makadown.personalnotes.provider"
            android:exported="true"
            android:readPermission="com.makadown.personalnotes.provider.READWRITE"
            android:writePermission="com.makadown.personalnotes.provideer.READWRITE" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- Include the AdActivity and InAppPurchaseActivity configChanges and themes. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity
            android:name="com.google.android.gms.appinvite.PreviewActivity"
            android:exported="true"
            android:theme="@style/Theme.AppInvite.Preview" >
            <intent-filter>
                <action android:name="com.google.android.gms.appinvite.ACTION_PREVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION" />

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="com.makadown.personalnotes.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>